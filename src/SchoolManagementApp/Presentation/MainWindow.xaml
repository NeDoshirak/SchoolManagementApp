<Window x:Class="SchoolManagementApp.Presentation.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SchoolManagementApp.Presentation.ViewModels"
        mc:Ignorable="d"
        Title="School Management App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Command="{Binding ExitCommand}" />
            </MenuItem>
            <MenuItem Header="Управление">
                <MenuItem Header="Ученики" Command="{Binding OpenStudentWindowCommand}" />
            </MenuItem>
            <MenuItem Header="О программе">
                <MenuItem Header="О программе" Command="{Binding OpenAboutWindowCommand}" />
            </MenuItem>
        </Menu>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Добро пожаловать в School Management App!" FontSize="20" />
        </StackPanel>
    </Grid>
</Window>