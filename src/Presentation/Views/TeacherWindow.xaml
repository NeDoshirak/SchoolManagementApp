<Window x:Class="Presentation.Views.TeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Presentation.ViewModels"
        Title="Учителя" Height="500" Width="800"
        Background="White">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левая часть: список учителей -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <Button Content="➕ Добавить учителя" Command="{Binding AddTeacherCommand}" Margin="0,0,0,10" />
            <ListBox ItemsSource="{Binding Teachers}" SelectedItem="{Binding SelectedTeacher}" Margin="0,0,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding PhotoPath, Converter={StaticResource ImagePathConverter}}" Width="30" Height="30" Margin="0,0,5,0" />
                            <TextBlock Text="{Binding FullName}" FontWeight="Bold" />
                            <Button Content="✏️" Command="{Binding DataContext.EditTeacherCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" Margin="10,0,5,0" />
                            <Button Content="🗑️" Command="{Binding DataContext.DeleteTeacherCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" Margin="5,0" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Правая часть: детали учителя -->
        <StackPanel Grid.Column="1" Margin="10" IsEnabled="{Binding HasSelectedTeacher}">
            <TextBlock Text="Имя:" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox Text="{Binding SelectedTeacherFullName, Mode=OneWay}" Margin="0,0,0,10" />

            <TextBlock Text="Активен:" FontWeight="Bold" Margin="0,0,0,5" />
            <CheckBox IsChecked="{Binding SelectedTeacherIsActive, Mode=OneWay}" Margin="0,0,0,10" />

            <TextBlock Text="Фото:" FontWeight="Bold" Margin="0,0,0,5" />
            <Image Source="{Binding SelectedTeacherPhotoPath, Converter={StaticResource ImagePathConverter}}" Width="100" Height="100" Margin="0,0,0,10" />

            <TextBlock Text="Класс:" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox Text="{Binding SelectedTeacherClassName, Mode=OneWay}" Margin="0,0,0,10" />

            <TextBlock Text="Кабинет:" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox Text="{Binding SelectedTeacherCabinetNumber, Mode=OneWay}" Margin="0,0,0,10" />
        </StackPanel>
    </Grid>
</Window>