<Window x:Class="Presentation.Views.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Presentation.ViewModels"
        Title="Ученики" Height="500" Width="800"
        Background="White">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Левая часть: список учеников -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <Button Content="➕ Добавить ученика" Command="{Binding AddStudentCommand}" Margin="0,0,0,10" />
            <ListBox ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}" Margin="0,0,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding PhotoPath, Converter={StaticResource ImagePathConverter}}" Width="50" Height="50" Margin="0,0,10,0" />
                            <StackPanel>
                                <TextBlock Text="{Binding FullName}" FontWeight="Bold" />
                                <TextBlock Text="{Binding Class.FullName}" />
                            </StackPanel>
                            <Button Content="✏️" Command="{Binding DataContext.EditStudentCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" Margin="10,0,5,0" />
                            <Button Content="🗑️" Command="{Binding DataContext.DeleteStudentCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}" Margin="5,0" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Правая часть: детали ученика -->
        <StackPanel Grid.Column="1" Margin="10" IsEnabled="{Binding HasSelectedStudent}">
            <TextBlock Text="ФИО:" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox Text="{Binding SelectedStudent.FullName, Mode=OneWay}" Margin="0,0,0,10" />

            <TextBlock Text="Класс:" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox Text="{Binding SelectedStudent.Class.FullName, Mode=OneWay}" Margin="0,0,0,10" />

            <TextBlock Text="Фото:" FontWeight="Bold" Margin="0,0,0,5" />
            <TextBox Text="{Binding SelectedStudent.PhotoPath, Mode=OneWay}" Margin="0,0,0,10" />
            <Image Source="{Binding SelectedStudent.PhotoPath, Converter={StaticResource ImagePathConverter}}" Width="100" Height="100" Margin="0,0,0,10" />

            <TextBlock Text="Оценки:" FontWeight="Bold" Margin="0,0,0,5" />
            <ListBox ItemsSource="{Binding SelectedStudentGrades}" Margin="0,0,0,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="0,2" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>