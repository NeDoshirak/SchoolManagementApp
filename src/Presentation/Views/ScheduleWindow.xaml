<Window x:Class="Presentation.Views.ScheduleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Presentation.ViewModels"
        Title="Расписание" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Фильтры -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Класс:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0" />
            <ComboBox ItemsSource="{Binding Classes}" SelectedItem="{Binding SelectedClass, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="FullName" Width="150" Margin="0,0,10,0" />
            <TextBlock Text="Четверть:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0" />
            <ComboBox ItemsSource="{Binding Quarters}" SelectedItem="{Binding SelectedQuarter, UpdateSourceTrigger=PropertyChanged}" Width="150">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding Converter="{StaticResource QuarterDisplayConverter}">
                                    <Binding Path="QuarterNumber" />
                                    <Binding Path="AcademicYear" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- Заголовок -->
        <TextBlock Grid.Row="1" Text="Расписание уроков" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />

        <!-- Таблица расписания -->
        <DataGrid Grid.Row="2" ItemsSource="{Binding Schedules}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" SelectionMode="Single" SelectedItem="{Binding SelectedSchedule}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№ урока" Binding="{Binding LessonNumber}" Width="80" />
                <DataGridTemplateColumn Header="Понедельник" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Subject.SubjectName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Вторник" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Subject.SubjectName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Среда" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Subject.SubjectName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Четверг" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Subject.SubjectName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Пятница" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Subject.SubjectName}" TextWrapping="Wrap" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить" Command="{Binding AddScheduleCommand}" Width="100" Margin="0,0,10,0" />
            <Button Content="Редактировать" Command="{Binding EditScheduleCommand}" CommandParameter="{Binding SelectedSchedule}" Width="100" Margin="0,0,10,0" IsEnabled="{Binding HasSelectedSchedule}" />
            <Button Content="Удалить" Command="{Binding DeleteScheduleCommand}" CommandParameter="{Binding SelectedSchedule}" Width="100" IsEnabled="{Binding HasSelectedSchedule}" />
        </StackPanel>
    </Grid>
</Window>