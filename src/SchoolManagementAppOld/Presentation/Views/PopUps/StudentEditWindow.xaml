<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolManagementApp.Presentation.Views.PopUps"
        xmlns:ViewModels="clr-namespace:SchoolManagementApp.Presentation.ViewModels" x:Class="SchoolManagementApp.Presentation.Views.PopUps.StudentEditWindow"
        mc:Ignorable="d"
        Title="Редактирование ученика" Height="400" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="ФИО:" FontWeight="Bold" />
        <TextBox Text="{Binding Student.FullName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
        <TextBlock Text="Фото (путь):" FontWeight="Bold" />
        <TextBox Text="{Binding Student.PhotoPath, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
        <TextBlock Text="Класс:" FontWeight="Bold" />
        <TextBox Text="{Binding Student.ClassId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
        <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" Height="30" Margin="0,10,0,0" />
        <Button Content="Отмена" Click="CancelButton_Click" Width="100" Height="30" Margin="0,10,0,0" />
    </StackPanel>
</Window>
